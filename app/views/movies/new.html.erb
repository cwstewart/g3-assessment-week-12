<div class="page-header">
  <h1>New Movie</h1>
</div>

<%= form_for @movie, class: "form-horizontal" do |f|  %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :year %>
    <%= f.text_field :year %>
  </div>

  <div class="form-group">
    <%= f.label :synopsis %>
    <%= f.text_area :synopsis %>
  </div>


  <%= f.submit %>

<% end %>
